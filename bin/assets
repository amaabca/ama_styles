#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '../config/application'
require_relative '../lib/ama_styles'

question = 'Please enter Branch name? or enter for master'
branch = HighLine.new.ask(question) do |q|
  q.default = 'master'
end

begin
  AMA::Styles::CLI.new(argv: ARGV, branch: branch).parse_and_execute
rescue StandardError => ex
  puts 'ERROR: '.colorize(:red) + ex.message
  exit
end
